/* pages/book/book.wxss */
.header{
  text-align: center;
  margin-top: 10rpx;
  background: #99ccff;
  height: 80rpx;
}
.num1,.num2,.num3{
  font-style: italic;
  font-weight: bold;
}
.num1{
  color: orange;
}
.num2{
  color: red;
}
.num3{
  color: green;
}
.text{
  font-weight: bold;
}
.dateBox{
  margin-top: 20rpx;
  font-weight: bold;
}
.currentDate{
  border: 5rpx solid black;
  padding: 5rpx 15rpx;
  margin: auto;
  border-radius: 20rpx;
  background:#ffffff;
}
.bookBody{
  font-weight: bold;
  padding: 10rpx;
}

.bookSite{
  background:white;
  border: 4rpx solid rgba(0,0,0,0.5);
  border-radius: 30rpx;
  padding: 15rpx;
  line-height: 30rpx;
  box-shadow: 4rpx 3rpx 5rpx 0rpx rgba(0,0,0,0.35);
  -webkit-box-shadow: 4rpx 3rpx 5rpx 0rpx rgba(0,0,0,0.35);
  -moz-box-shadow: 4rpx 3rpx 5rpx 0rpx rgba(0,0,0,0.35);
}
.icon{
  display: inline-block;
  margin: 0 10rpx;
}
.choseBtn{
  float: right;
}
.siteFont{
  font-size: 30rpx;
}
.select{
  display: block;
  margin: 0 auto;
  margin-top: 10rpx;
  text-align: center;
  
}
.select ul{
  height: 0;
  
  overflow: hidden;
}
.select ul li {
  padding-left: 0.5rem;
  display: block;
  line-height: 2rem;
  text-align: left;
  height: 0;
  transition: all .2s linear;
  position: relative;
  overflow: hidden;
  border: none;
}
.myBtn{
  position: absolute;
  right: 0;
  top: 0;
  display: block;
}
.title{
  padding: 20rpx;
}
.tag{
  display: inline-block;
}
.line{
  width:100%;
  height:2rpx;
  background:#aaa;
}
.selected ul li {
  border-radius: 15rpx;
  background:white;
  height: 60rpx;
  border:1px solid #bfbfbf;
  margin:10rpx;
}
.disabled {
  pointer-events: none;
  opacity: 0.8;
}